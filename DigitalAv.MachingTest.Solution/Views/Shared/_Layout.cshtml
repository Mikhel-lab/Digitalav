<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - DigitalAlv</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link href="~/css/style.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
</head>
<body>
	<div class="container-scroller">
		<nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
			<div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
				<a asp-controller="Home" asp-action="Index" class="navbar-brand brand-logo"></a>
			</div>
			@*<div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
				<partial name="_LoginPartial" />
			</div>*@
		</nav>
		<div class="container-fluid page-body-wrapper">
			<nav class="sidebar sidebar-offcanvas" id="sidebar">
				<ul class="nav">
					<li class="nav-item">
						<a class="nav-link" data-toggle="collapse" href="#Employee" arial-expanded="false" arial-controls="ui-basic">
							<i class="fas fa-users fa-lag text-primary" style="margin-right: 0.7em"></i>
							<span class="menu-title">Customer</span>
							<i class="menu-arrow text-primary"></i>
						</a>
						<di class="collapse" id="Employee">
							<ul class="nav flex-column sub-menu">
								<li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Create"> New Customer</a></li>
								<li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Index"> All Customers</a></li>
							</ul>
						</di>
					<li />

					<li class="nav-item">
						<a class="nav-link" data-toggle="collapse" href="#Payroll" arial-expanded="false" arial-controls="ui-basic">
							<i class="fas fa-pound-sign fa-lag text-primary" style="margin-right: 0.7em"></i>
							<span class="menu-title">GetData</span>
							<i class="menu-arrow text-primary"></i>
						</a>
						
					<li />
				</ul>
			</nav>
			<div class="main-panel">
				@*<partial name="_CookieConsentPartial" />*@
				<div class="content-wrapper">
					@RenderBody()
				</div>
				<footer class="footer">
					<p> &copy; @DateTime.UtcNow.Year -  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
				</footer>
			</div>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
